<Window x:Class="OnlineTableGamePlayer.SettingWinodw"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineTableGamePlayer"
        xmlns:vm="clr-namespace:OnlineTableGamePlayer.ViewModel"
        mc:Ignorable="d"
        Title="SettingWinodw" Height="450" Width="400">
    <Window.DataContext>
        <vm:SettingWindowViewModel/>
    </Window.DataContext>
    
    
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Stroke="Black"/>
            <Rectangle Stroke="Black" Grid.Column="1"/>
            <Rectangle Stroke="Black" Grid.Column="2"/>
            <Label Content="カメラ番号" HorizontalAlignment="Center"/>
            <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="CameraSettingText" Text="{Binding cameraIndexSetting}"/>
            <Button Grid.Column="2" Content="保存する" Command="{Binding cameraIndexSaveCommand}"/>
        </Grid>
    </StackPanel>
</Window>
