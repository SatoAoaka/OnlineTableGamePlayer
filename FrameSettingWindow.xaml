<Window x:Class="OnlineTableGamePlayer.FrameSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineTableGamePlayer"
        mc:Ignorable="d"
        Title="FrameSettingWindow" Height="450" Width="600" >
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Label Content="操作方法" HorizontalAlignment="Center"/>
            <Label Grid.Column="1" Name="operation" HorizontalAlignment="Center" Content="切り取りたい範囲の左上をクリック！"/>
        </Grid>
        <Rectangle Stroke="Black"/>
        <Image Name="myImageArea" MouseLeftButtonDown="myImageArea_MouseLeftButtonDown" />
    </StackPanel>
</Window>
